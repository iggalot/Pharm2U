<UserControl x:Class="Pharm2U.Views.Orders.OrderDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pharm2U.Views.Orders"
             xmlns:vm="clr-namespace:Pharm2U.ViewModels.DataViewModels"
             xmlns:convert="clr-namespace:Pharm2U.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <convert:NullToVisibilityConverter x:Key="NullToVisConverter"/>
    </UserControl.Resources>
    
    <Grid Visibility="{Binding Converter={StaticResource NullToVisConverter}}">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Row="1" Grid.ColumnSpan="3" Content="Preview" Click="PrintPreview_Click" />

        <Border Grid.Row="2" Grid.ColumnSpan="3" Padding="20" Background="White">
            <Grid Margin="40 0 40 0"  Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="125"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="0.75*"/>
                    <RowDefinition Height="0.5*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="0.5*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <FlowDocumentReader Margin="20" Grid.Row="1" Grid.RowSpan="13" Grid.ColumnSpan="3">
                    <FlowDocument x:Name="fixeddoc">
                        <BlockUIContainer>
                            <!-- Icon/Logo-->
                            <Border Padding="10" Margin="5"  
                            Grid.ColumnSpan="3"
                            Grid.Row="0"
                            Grid.Column="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                                <Image 
                                Source="/Pharm2U;component/Images/Logo/Pharmacy 2U_HORZ.png"
                                />
                            </Border>
                        </BlockUIContainer>

                        <BlockUIContainer>
                            <!-- Title -->
                            <Label Grid.Row="1" 
                            Grid.Column="0" 
                            Grid.ColumnSpan="3" 
                            FontWeight="Bold"  
                            FontSize="20" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Content="Pharmacy 2U Delivery Manifest"/>
                        </BlockUIContainer>

                        <!-- Pharmacy Address -->
                        <BlockUIContainer>
                            <StackPanel Orientation="Vertical"
                            Grid.Row="2"
                            Grid.Column="0" >
                                <StackPanel Orientation="Horizontal">
                                    <Label FontSize="12" Content="Pharmacy ID: "/>
                                    <Label FontSize="12" Content="{Binding PharmacyID, FallbackValue=Error}"/>
                                </StackPanel>
                                <Label FontSize="12" Content="Pharmacy Name"/>
                                <Label FontSize="12" Content="Street"/>
                                <Label FontSize="12" Content="City/State"/>
                                <Label FontSize="12" Content="Phone # - Option Info" />
                            </StackPanel>
                        </BlockUIContainer>

                        <!-- Order Date / Order # -->
                        <BlockUIContainer>
                            <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Horizontal" Grid.Column="0">
                                    <Label FontSize="12" FontWeight="Bold" Content="Order Date:"/>
                                    <Label FontSize="12" Content="{Binding Order.NewOrderCreatedWhen, FallbackValue=Error}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Grid.Column="2">
                                    <Label FontSize="12" FontWeight="Bold" Content="Order Number:"/>
                                    <Label FontSize="12" Content="{Binding Order.ItemID, FallbackValue=Error}"/>
                                </StackPanel>
                            </Grid>
                        </BlockUIContainer>

                        <!-- Customer Info -->
                        <BlockUIContainer>
                            <StackPanel 
                                    Orientation="Vertical"
                                    Margin="0 0 0 15"
                                    Grid.Row="4"
                                    Grid.Column="0" 
                                    Grid.ColumnSpan="3"
                                    >
                                <StackPanel Orientation="Horizontal" >
                                    <Label FontSize="12" Margin="0 0 3 0" Content="Customer ID #:"/>
                                    <Label FontSize="12" Margin="0 0 3 0" Content="{Binding Customer.ItemID, FallbackValue=Error}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" >
                                    <Label FontSize="12" Margin="0 0 1 0" Content="{Binding Customer.FirstName}"/>
                                    <Label FontSize="12" Margin="0 0 1 0" Content="{Binding Customer.LastName}"/>
                                </StackPanel>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Row="0"  Orientation="Vertical" Grid.Column="0">
                                        <Label FontSize="12" Content="Delivery Address:" FontWeight="Bold"/>
                                        <Label FontSize="12" Content="{Binding Customer.StreetAddress}"/>
                                        <Label FontSize="12" Content="{Binding Customer.Zip}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                                        <Label FontSize="12" Content="Phone: " FontWeight="Bold"/>
                                        <Label FontSize="12" Content="{Binding Customer.Phone}" />
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </BlockUIContainer>
                        
                        <!-- Food Order Info -->
                        <BlockUIContainer>
                            <ListBox ItemsSource="{Binding FoodList}" >
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="50"/>
                                                <ColumnDefinition Width="50"/>
                                                <ColumnDefinition Width="125"/>
                                                <ColumnDefinition Width="150"/>
                                                <ColumnDefinition Width="75"/>
                                                <ColumnDefinition Width="50"/>
                                                <ColumnDefinition Width="50"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBox Margin="2" FontSize="12" Grid.Column="0" Text="{Binding Id}"/>
                                            <TextBox Margin="2" FontSize="12" Grid.Column="1" Text="{Binding Qty}"/>
                                            <TextBox Margin="2" FontSize="12" Grid.Column="2" Text="{Binding Name}"/>
                                            <TextBox Margin="2" FontSize="12" Grid.Column="3" Text="{Binding Description}"/>
                                            <TextBox Margin="2" FontSize="12" Grid.Column="4" Text="{Binding Type}"/>
                                            <TextBox Margin="2" FontSize="12" Grid.Column="5" Text="{Binding Price}"/>
                                            <TextBox Margin="2" FontSize="12" Grid.Column="6" Text="{Binding Taxable}"/>
                                        </Grid>

                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </BlockUIContainer>


                        <!-- OTCMeds Order Info -->
                        <BlockUIContainer>
                            <ListBox ItemsSource="{Binding OTCMedsList}" >
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="50"/>
                                                <ColumnDefinition Width="50"/>
                                                <ColumnDefinition Width="125"/>
                                                <ColumnDefinition Width="150"/>
                                                <ColumnDefinition Width="75"/>
                                                <ColumnDefinition Width="50"/>
                                                <ColumnDefinition Width="50"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBox Margin="2" FontSize="12" Grid.Column="0" Text="{Binding Id}"/>
                                            <TextBox Margin="2" FontSize="12" Grid.Column="1" Text="{Binding Qty}"/>
                                            <TextBox Margin="2" FontSize="12" Grid.Column="2" Text="{Binding Name}"/>
                                            <TextBox Margin="2" FontSize="12" Grid.Column="3" Text="{Binding Description}"/>
                                            <TextBox Margin="2" FontSize="12" Grid.Column="4" Text="{Binding Price}"/>
                                            <TextBox Margin="2" FontSize="12" Grid.Column="5" Text="{Binding Taxable}"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </BlockUIContainer>
                    </FlowDocument>
                </FlowDocumentReader>
            </Grid>
        </Border>
    </Grid>
</UserControl>
